<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A3424"
    tools:context=".PostPage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_view_chalk_defalt2"
        android:layout_margin="30px"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="95"
            android:weightSum="5.3">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3">
                <ImageButton
                    android:id="@+id/pg_xbtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_back2"
                    android:background="#00ff0000">
                </ImageButton>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="작성하기"
                    android:fontFamily="@font/font_5"
                    android:textColor="@color/white">
                </TextView>
                <ImageButton
                    android:id="@+id/pg_done"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="#00ff0000"
                    android:src="@drawable/ic_complete3"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp">
                </ImageButton>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"></View>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/img_view_round_black">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/add_img_btn"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_camera2"
                                android:layout_marginLeft="12dp"></ImageView>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"></View>
                            <TextView
                                android:id="@+id/count_img"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:text="사진 추가(0/5)"
                                android:textSize="14dp"
                                android:fontFamily="@font/font_3"
                                android:textColor="@color/white"
                                android:layout_marginRight="12dp"></TextView>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/prouduct_recycleview"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:scrollbars="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="100"
                        android:background="#E1B637"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="70"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/pin"
                                android:layout_marginLeft="15dp"></ImageView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:text="제목"
                                android:textColor="#252525"
                                android:textSize="16dp"
                                android:fontFamily="@font/font_5"
                                android:layout_gravity="center"
                                android:gravity="center"></TextView>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"></View>
                            <Spinner
                                android:id="@+id/purpose"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"
                                android:layout_gravity="center"
                                android:gravity="right"
                                android:fontFamily="@font/font_3">
                            </Spinner>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/title_text"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textColor="#252525"
                            android:textColorHint="#575757"
                            android:fontFamily="@font/font_5"
                            android:textSize="15dp"
                            android:hint="제목을 입력하세요."></EditText>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:text="가격"
                            android:textSize="16dp"
                            android:textColor="#252525"
                            android:fontFamily="@font/font_5"
                            android:layout_gravity="left"
                            android:gravity="center"></TextView>
                        <EditText
                            android:id="@+id/et_cash"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textColor="#252525"
                            android:textColorHint="#575757"
                            android:fontFamily="@font/font_5"
                            android:textSize="15dp"
                            android:hint="가격을 입력하세요."></EditText>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:text="카테고리 :"
                                android:textSize="16dp"
                                android:textColor="#252525"
                                android:fontFamily="@font/font_5"
                                android:layout_gravity="left"
                                android:gravity="center"></TextView>
                            <Spinner
                                android:id="@+id/category"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:spinnerMode="dropdown"
                                android:layout_gravity="center"
                                android:gravity="right"
                                android:fontFamily="@font/font_3"></Spinner>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tmap_btn"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="거래장소 선택"
                            android:fontFamily="@font/font_5"
                            android:background="@drawable/img_view_round_black"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:text="내용"
                                android:textColor="#252525"
                                android:textSize="16dp"
                                android:fontFamily="@font/font_5"
                                android:layout_gravity="left"
                                android:gravity="center"></TextView>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"></View>
                            <TextView
                                android:id="@+id/max_text"
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:text="0/200"
                                android:textColor="#575757"
                                android:fontFamily="@font/font_3"
                                android:layout_gravity="center"
                                android:gravity="center"></TextView>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#252525"
                            android:textColorHint="#575757"
                            android:textSize="15dp"
                            android:fontFamily="@font/font_5"
                            android:hint="내용을 입력하세요."></EditText>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>