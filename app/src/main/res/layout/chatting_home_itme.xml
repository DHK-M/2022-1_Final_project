<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00ff0000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/img_view_round">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp">
                    <!-- 상품 사진 -->
                    <ImageView
                        android:id="@+id/chatting_home_product_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_setimg"></ImageView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/img_view_round">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp">
                    <!-- 프로필 사진 -->
                    <ImageView
                        android:id="@+id/chattimg_home_user_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_setimg"></ImageView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:weightSum="10"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9">
                    <!-- 채팅 타이틀 -->
                    <TextView
                        android:id="@+id/chattimg_home_title"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:fontFamily="@font/font_5"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:maxEms="11"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textAlignment="textStart"></TextView>
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/img_view_round">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/ic_mypage2"></ImageView>
                        <!-- 채팅방 인원수 -->
                        <TextView
                            android:id="@+id/chatting_home_peoples"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:textColor="#ffffff"
                            android:text=""
                            android:gravity="center"
                            android:textAlignment="center"
                            android:fontFamily="@font/font_6"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <!-- 채팅 시간 -->
                <TextView
                    android:id="@+id/chatting_home_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="10dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!-- 마지막 글  -->
                <TextView
                    android:id="@+id/chattimg_home_lasttext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text=""
                    android:fontFamily="@font/font_3"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:maxLines="2"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:ellipsize="end"
                    tools:ignore="RtlCompat"></TextView>
                <!-- 알림 이미지 (빨간 동그라미) java파일로 background 변경 가능하더라 no off 할수 있을-->
                <LinearLayout
                    android:id="@+id/chatting_home_alarmimg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/ci_chattimg_alarm">
                    <!-- 알림 안에 숫자 -->
                    <TextView
                        android:id="@+id/chatting_home_alarmnum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="15"
                        android:textSize="18dp"
                        android:fontFamily="@font/font_5"
                        android:textColor="#FFEB3B"
                        android:gravity="center"
                        android:textAlignment="center"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="1dp"></View>
</LinearLayout>
