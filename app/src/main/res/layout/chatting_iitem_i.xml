<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00ff0000"
    android:gravity="right"
    android:layout_gravity="right">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:gravity="right">
            <TextView
                android:id="@+id/chattimg_item_i_neme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최도원"
                android:textSize="20px"
                android:textColor="#ffffff"
                android:fontFamily="@font/font_5"
                android:layout_margin="2dp"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/chatting_item_i_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20201225"
                    android:textSize="18px"
                    android:textColor="#BDBDBD"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chatting_view_round"
                    android:layout_margin="3dp">
                    <TextView
                        android:id="@+id/chattimg_item_i_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나는 최도원 입니다 ㅎㅇㅎㅇ 개배고파요 \n그거 사고싶어요 내고 가능한가요?가나다라마바사 아자차카타파하 ㅎㅎ 개뀰잼 "
                        android:textSize="24px"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/font_5"
                        android:maxEms="20"
                        android:maxLines="30"
                        android:ellipsize="end"
                        android:textAlignment="textStart"
                        android:layout_margin="5dp"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/img_view_round"
                android:layout_margin="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp">
                    <!-- 프로필 사진 -->
                    <ImageView
                        android:id="@+id/chattimg_item_i_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_setimg"></ImageView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>