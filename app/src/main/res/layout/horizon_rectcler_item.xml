<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="2dp"
    android:orientation="vertical"
    android:background="#00ff0000">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/img_view_round">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/recyclerHorizon_item"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_setimg"
                    android:padding="0dp"
                    android:background="@drawable/img_view_round"></ImageButton>
                <TextView
                    android:id="@+id/textImg"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="품명"
                    android:fontFamily="@font/font_3"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:background="#00ff0000"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
 

