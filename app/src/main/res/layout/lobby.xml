<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#4A3424"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30px"
        android:background="@drawable/img_view_chalk_defalt2"
        android:weightSum="5.4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="673dp"
            android:orientation="vertical"
            android:weightSum="5.3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:weightSum="10">
                <ImageButton
                    android:id="@+id/addbtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_post"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:background="#00ff0000"></ImageButton>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:text="선문대학교"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:fontFamily="@font/font_5"></TextView>
                <ImageButton
                    android:id="@+id/setbtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_mypage2"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:background="#00ff0000"></ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"></View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/img_view_round"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="25dp"
                                    app:cardElevation="5dp"
                                    android:layout_margin="2dp">
                                    <ImageButton
                                        android:id="@+id/Show"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="0dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_setimg"></ImageButton>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/img_view_round"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="25dp"
                                    app:cardElevation="5dp"
                                    android:layout_margin="2dp">
                                    <ImageButton
                                        android:id="@+id/Sell"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:padding="0dp"
                                        android:src="@drawable/ic_setimg"></ImageButton>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="모두보기"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/font_5"
                                ></TextView>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="마켓"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/font_5"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/img_view_round"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="25dp"
                                    app:cardElevation="5dp"
                                    android:layout_margin="2dp">

                                    <ImageButton
                                        android:id="@+id/Buy"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="0dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_setimg"></ImageButton>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/img_view_round"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="25dp"
                                    app:cardElevation="5dp"
                                    android:layout_margin="2dp">
                                    <ImageButton
                                        android:id="@+id/Share"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:padding="0dp"
                                        android:src="@drawable/ic_setimg"></ImageButton>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="무료나눔"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/font_5"></TextView>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="채팅"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/font_5"></TextView>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"></View>

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/advertising"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:orientation="horizontal"
                            android:scaleType="center"
                            ></androidx.viewpager2.widget.ViewPager2>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"></View>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="최신 글"
                            android:textColor="#ffffff"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/font_3"></TextView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/lobby_recyclerHorizon"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>