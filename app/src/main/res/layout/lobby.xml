<?xml version="1.0" encoding="utf-8"?>
<!-- 개발자: 최도원, 이정빈 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#4A3424"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30px"
        android:background="@drawable/img_view_chalk_defalt2"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="95"
            android:orientation="vertical"
            android:weightSum="5.3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:weightSum="10">
                <ImageButton
                    android:id="@+id/addbtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_post2"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:background="#00ff0000"></ImageButton>
                <Spinner
                    android:id="@+id/univ_spinner"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:fontFamily="@font/font_5"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:spinnerMode="dropdown"></Spinner>
                <ImageButton
                    android:id="@+id/setbtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_mypage2"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:background="#00ff0000"></ImageButton>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    android:background="@drawable/img_view_round">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:cardCornerRadius="20dp"
                                        app:cardElevation="5dp"
                                        android:layout_margin="2dp">
                                        <ImageButton
                                            android:id="@+id/Show"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:padding="0dp"
                                            android:scaleType="centerCrop"
                                            android:src="@raw/ic_lobby_all"
                                            android:background="@drawable/img_view_round"></ImageButton>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    android:background="@drawable/img_view_round">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:cardCornerRadius="20dp"
                                        app:cardElevation="5dp"
                                        android:layout_margin="2dp">
                                        <ImageButton
                                            android:id="@+id/Sell"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:padding="0dp"
                                            android:src="@raw/ic_lobby_maket"
                                            android:background="@drawable/img_view_round"></ImageButton>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="모두보기"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/font_5"
                                android:layout_marginBottom="5dp"></TextView>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="마켓"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/font_5"
                                android:layout_marginBottom="5dp"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    android:background="@drawable/img_view_round">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:cardCornerRadius="20dp"
                                        app:cardElevation="5dp"
                                        android:layout_margin="2dp">
                                        <ImageButton
                                            android:id="@+id/share"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:padding="0dp"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_lobby_free"
                                            android:background="@drawable/img_view_round"></ImageButton>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    android:background="@drawable/img_view_round">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:cardCornerRadius="20dp"
                                        app:cardElevation="5dp"
                                        android:layout_margin="2dp">
                                        <ImageButton
                                            android:id="@+id/chat"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:padding="0dp"
                                            android:src="@drawable/ic_lobby_chatting"
                                            android:background="@drawable/img_view_round"></ImageButton>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="무료나눔"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/font_5"></TextView>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="채팅"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/font_5"></TextView>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="최신글"
                            android:textColor="#ffffff"
                            android:textSize="15dp"
                            android:fontFamily="@font/font_3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"></TextView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/lobby_recyclerHorizon"
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="가격 별 보기"
                            android:textColor="#ffffff"
                            android:textSize="15dp"
                            android:fontFamily="@font/font_3"
                            android:layout_marginLeft="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"></TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:weightSum="4">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/oneover"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="1만원대"
                                    android:textSize="12dp"
                                    android:textColor="#ffffff"
                                    android:gravity="center"
                                    android:fontFamily="@font/font_5"
                                    android:background="@drawable/bt_bg_yellow"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"></TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/twoover"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="2만원대"
                                    android:textSize="12dp"
                                    android:textColor="#ffffff"
                                    android:gravity="center"
                                    android:fontFamily="@font/font_5"
                                    android:background="@drawable/bt_bg_white"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"></TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/threeover"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="3만원대"
                                    android:textSize="12dp"
                                    android:textColor="#ffffff"
                                    android:gravity="center"
                                    android:fontFamily="@font/font_5"
                                    android:background="@drawable/bt_bg_white"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"></TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/fiveover"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="5만원이상"
                                    android:textSize="12dp"
                                    android:textColor="#ffffff"
                                    android:gravity="center"
                                    android:fontFamily="@font/font_5"
                                    android:background="@drawable/bt_bg_white"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"></TextView>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="10dp">
                        </TextView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cost_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1" />
                    </LinearLayout>


                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>