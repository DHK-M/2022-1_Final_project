<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#4A3424"
    tools:context=".DetailPage">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30px"
        android:background="@drawable/img_view_chalk_defalt2"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="95"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="10">
                <ImageButton
                    android:id="@+id/back_login"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_back2"
                    android:scaleType="fitStart"
                    android:background="#00ff0000"
                    android:padding="3dp"
                    android:layout_margin="3dp"></ImageButton>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:src="@drawable/logo"
                    android:scaleType="fitCenter"
                    android:background="#00ff0000"
                    android:padding="3dp"></ImageView>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="#00ff0000"
                    android:padding="3dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_complete3"
                    android:layout_margin="3dp"></ImageButton>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"></View>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/img_view_round">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp"
                            android:layout_margin="2dp">
                            <ImageButton
                                android:id="@+id/detail_page_main_img1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_setimg"
                                android:padding="0dp"
                                android:background="@drawable/img_view_round"></ImageButton>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/product_imges"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="5dp"></androidx.recyclerview.widget.RecyclerView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#E1B637">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/pin"
                            android:layout_marginLeft="15dp"></ImageView>
                        <TextView
                            android:id="@+id/product_name"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="여기 품명"
                            android:fontFamily="@font/font_5"
                            android:textColor="#252525"
                            android:textSize="20dp"
                            android:gravity="center">
                        </TextView>

                        <TextView
                            android:id="@+id/category_name"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="여기 카테고리 명"
                            android:fontFamily="@font/font_1"
                            android:textColor="#252525"
                            android:textSize="15dp"
                            android:gravity="center">
                        </TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#252525"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:weightSum="2.7"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/purpose"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:text="무료나눔"
                                android:fontFamily="@font/font_5"
                                android:textSize="18dp"
                                android:textColor="#252525"
                                android:gravity="center"></TextView>
                            <TextView
                                android:id="@+id/money"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:text="99,999,999 원"
                                android:fontFamily="@font/font_5"
                                android:textSize="18dp"
                                android:textColor="#252525"
                                android:gravity="center|right"
                                android:paddingRight="15dp">
                            </TextView>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#252525"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"></View>
                        <TextView
                            android:id="@+id/detail_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="//여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        //여기 내용//        "
                            android:textColor="#252525"
                            android:fontFamily="@font/font_5"
                            android:textSize="18dp"
                            ></TextView>
                    </LinearLayout>
                    <!-- 지도 뚫어놓은거  (여기부터)-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:paddingRight="80dp"
                        android:paddingLeft="80dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">
                        <TextView
                            android:id="@+id/go_transaction_map"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="지정된 거래장소 보기"
                            android:fontFamily="@font/font_6"
                            android:textSize="15dp"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="@drawable/bt_tumyeong_sty"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/map_control"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="250dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#4CA1E4">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/pin"
                            android:layout_marginLeft="15dp"></ImageView>
                        <com.skt.Tmap.TMapView
                            android:id="@+id/map_reserve"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp">
                        </com.skt.Tmap.TMapView>
                    </LinearLayout>
                    <!-- 지도 뚫어놓은거  (여기까지)-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:paddingRight="100dp"
                        android:paddingLeft="100dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/go_chatting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="채팅하기"
                            android:fontFamily="@font/font_6"
                            android:textSize="22dp"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="@drawable/bt_tumyeong_sty"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"></TextView>
                    </LinearLayout>




                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>