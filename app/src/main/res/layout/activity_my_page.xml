<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#4A3424"
    tools:context=".SettingPage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30px"
        android:background="@drawable/img_view_chalk_defalt2"
        android:weightSum="5.3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/mypage_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="#00ff0000"
                android:scaleType="fitStart"
                android:src="@drawable/ic_back2"></ImageButton>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:text="내 이야기"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:fontFamily="@font/font_5"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/profile_round">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="100dp"
                            app:cardElevation="5dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp">
                            <ImageView
                                android:id="@+id/mypage_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_proile"
                                android:padding="0dp"></ImageView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/mypage_button"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitEnd"
                        android:background="#00ff0000"
                        android:src="@drawable/ic_set"></ImageButton>
                    <TextView
                        android:id="@+id/mypage_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="name"
                        android:fontFamily="@font/font_7"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:ellipsize="end"></TextView>
                    <TextView
                        android:id="@+id/mypage_email"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:text="2xrwc234x2@gmail.com"
                        android:fontFamily="@font/font_3"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.03"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/selling"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="판매중"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:fontFamily="@font/font_5"
                        android:background="@drawable/bt_bg_yellow"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/trans_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="무료나눔중"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:fontFamily="@font/font_5"
                        android:background="@drawable/bt_bg_white"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/www"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="거래완료"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:fontFamily="@font/font_5"
                        android:background="@drawable/bt_bg_white"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"></TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.97">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mp_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>