<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#745641"
    tools:context=".SettingPage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="45px"
        android:background="@drawable/img_view_chalk_defalt2"
        android:weightSum="5.3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/mypage_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="#00ff0000"
                android:scaleType="fitStart"
                android:src="@drawable/ic_back2"></ImageButton>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:text="내 이야기"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:fontFamily="@font/font_5"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/profile_round">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="100dp"
                            app:cardElevation="5dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp">
                            <ImageView
                                android:id="@+id/mypage_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_proile"
                                android:padding="0dp"></ImageView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitEnd"
                        android:background="#00ff0000"
                        android:src="@drawable/ic_set"></ImageButton>
                    <TextView
                        android:id="@+id/mypage_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="name"
                        android:fontFamily="@font/font_7"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"></TextView>
                    <TextView
                        android:id="@+id/mypage_email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="2xrwc234x2@gmail.com"
                        android:fontFamily="@font/font_3"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:layout_marginLeft="15dp"></TextView>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.03"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="내 거래목록"
                android:fontFamily="@font/font_3"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.47">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>