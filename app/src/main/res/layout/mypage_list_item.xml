<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#00ff0000">
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/img_view_round">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                android:layout_gravity="center"
                android:layout_margin="2dp">
            <ImageView
                android:id="@+id/mypage_list_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_setimg"
                android:padding="0dp"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/mypage_list_set"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitEnd"
            android:background="#00ff0000"
            android:src="@drawable/ic_set"></ImageButton>
        <TextView
            android:id="@+id/mypage_list_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:fontFamily="@font/font_5"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:ellipsize="end"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mypage_list_price"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text=""
                android:fontFamily="@font/font_3"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:ellipsize="end"></TextView>

            <TextView
                android:id="@+id/mypage_list_date"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:fontFamily="@font/font_6"
                android:textColor="#ffffff"
                android:textSize="15dp"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
