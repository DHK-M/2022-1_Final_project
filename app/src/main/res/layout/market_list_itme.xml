<?xml version="1.0" encoding="utf-8"?>
<!-- 여기가 리스트들 아이템 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#00ff0000">
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/img_view_round">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                android:layout_gravity="center"
                android:layout_margin="2dp">
                <ImageView
                    android:id="@+id/market_list_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_setimg"
                    android:padding="0dp"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/market_list_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="제목"
            android:fontFamily="@font/font_5"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="center"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/market_list_price"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="00000000원"
                android:fontFamily="@font/font_3"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                tools:ignore="RtlCompat"></TextView>

            <TextView
                android:id="@+id/market_list_date"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="0dp"
                android:text="2022년\n??월??일"
                android:fontFamily="@font/font_6"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="15dp"
                tools:ignore="RtlCompat"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
